<!DOCTYPE html>
<html>
	<head>
  		<title>Checkbook</title>
  		<%= stylesheet_link_tag    "application", :media => "all" %>
  		<%= javascript_include_tag "application" %>
  		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="navbar-inner"> 
				<div class = "container">
					<a class="brand" href="#">Checkbox</a>
					<ul class="nav">
						<li><%= link_to "All statuses", statuses_path%></li>
					</ul>
					<ul class = "nav pull-right">
						<% if user_signed_in? %>
							<li><%= link_to current_user.full_name,edit_user_registration_path(current_user)%></li>
							<li><%= link_to "Sign Out",destroy_user_session_path, method: :delete %></li>
						<% else %>
							<li><%= link_to "Register", register_path %></li>
							<li><%= link_to "Sign in", signin_path %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
		<div class = "container">
			<% flash.each do |type,messege| %>
				<div class="alert <%= flash_type_class(type) %>">
    				<button type="button" class="close" data-dismiss="alert">&times;</button>
    				<strong><%= messege %></strong> Best check yo self, you're not looking too good.
    			</div>
			<% end %>
			
			<%= yield %>
		</div>
	</body>
</html>
