<div class="row">
	<div class="span4">
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html:{class:"well"}) do |f| %>
			<fieldset>
				<legend><strong>Sign in</strong></legend>
 				<%=f.input :email %>
 				<%= f.input :password %>
  				<% if devise_mapping.rememberable? -%>
    				<%= f.input:remember_me, as: :boolean,boolean_style: :inline %>
  				<% end -%>
  				<div class = "form-actions"><%= f.button :submit %></div>
  			</fieldset>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
	<div class = "span8">
		<h2>Signing is safe and easier</h2>
	</div>
</div>